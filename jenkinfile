pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the GitHub repository
                git url: 'https://github.com/Nawres-code/DevOpsBackend.git', branch: 'main'
            }
        }
        
        stage('Build Backend') {
            steps {
                // Build the Spring Boot backend using Maven
                sh 'mvn clean install'
            }
        }

        stage('Run Unit Tests') {
            steps {
                // Run unit tests
                sh 'mvn test'
            }
        }
        
        stage('Package Application') {
            steps {
                // Package the Spring Boot app into a JAR file
                sh 'mvn package'
            }
        }
    }

    post {
        always {
            // Clean workspace after the pipeline execution
            cleanWs()
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
