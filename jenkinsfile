pipeline {
    agent any

    stages {
        stage('Clean up') {
            steps {
                // Clean up workspace before starting the pipeline
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                // Clone the GitHub repository and checkout the 'salsabilbackdevops' branch
                git url: 'https://github.com/Nawres-code/DevOpsBackend.git', branch: 'salsabilbackdevops'
            }
        }
        stage('Build and Deploy to Nexus') {
            steps {
                // Run Maven deploy while skipping tests
                sh 'mvn clean deploy -DskipTests'
            }
        }
        stage('Build image') {
            steps {
                echo 'Building Docker image'
                sh 'docker build -t salsabilhamraoui510802/backimagef:1.0.0 .'
            }
        }
        stage('Push image') {
            steps {
                echo 'Pushing Docker image'
                sh '''
                  docker login -u salsabilhamraoui510802 -p sousousal
                  docker push salsabilhamraoui510802/backimagef:1.0.0
                '''
            }
        }
    }

    post {
        always {
            // Always clean the workspace after the pipeline execution
            cleanWs()
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
